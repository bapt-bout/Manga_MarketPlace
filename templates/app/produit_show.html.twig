{% extends 'base.html.twig' %}

{% block title %}{{ produit.titre }} - Manga MarketPlace{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="{{ asset("uploads/images/" ~ produit.photo) }}" class="img-fluid" alt="{{ produit.titre }}">
        </div>
        <div class="col-md-6">
            <h1>{{ produit.titre }}</h1>
            <p><strong>Prix :</strong> {{ produit.prix|number_format(2, '.') }} €</p>
            {% if produit.stock > 0 %}
                <p><strong>Stock disponible :</strong> {{ produit.stock }}</p>
                <form action="{{ path('cart_add', {id: produit.id}) }}" method="post">
                    <div class="form-group">
                        <label for="qtAdd">Quantité :</label>
                        <select class="form-control" name="qtAdd" id="qtAdd">
                            {% for i in 1..produit.stock %}
                                <option value="{{i}}">{{i}}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Ajouter au panier</button>
                </form>
            {% else %}
                <p><strong>Stock :</strong> En rupture de stock</p>
            {% endif %}
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-12">
            <h2>Description :</h2>
            <p>{{ produit.description }}</p>
        </div>
    </div>
</div>
{% endblock %}
